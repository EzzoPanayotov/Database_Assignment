<%- include('layouts/main');-%>

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
  </head>

  <body>
    <div class="container">
      <h1 class="cardTitle"><%= article.title %></h1>
      <div class="dateCreated">
        <%= article.createdAt.toLocaleDateString() %>
      </div>
      <div class="back-to-main-div">
        <a class="back-to-main" href="/">Home</a>
        <a class="edit-article" href="/editArticles/<%= article.id %> ">Edit</a>
      </div>
      <div class="card-desc-read-more"><%- article.description %></div>
    </div>
  </body>
</html>
